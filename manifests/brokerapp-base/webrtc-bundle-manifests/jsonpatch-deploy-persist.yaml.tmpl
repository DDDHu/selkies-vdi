{{- $enablePersistence := false }}
{{- if .UserParams.enablePersistence }}
  {{- if eq .UserParams.enablePersistence "true" }}
    {{- $enablePersistence = true }}
  {{- end}}
{{- end}}

{{- if $enablePersistence }}
###
# Add volume claim template
###
- op: add
  path: "/spec/volumeClaimTemplates/-"
  value:
    metadata:
      name: persist
      annotations:
        gke.accel.vdi/user: "{{.User}}"
    spec:
      accessModes: [ "ReadWriteOnce" ]
      resources:
        requests:
          storage: 50Gi

###
# Add init container for persistent storage
###
- op: add
  path: "/spec/template/spec/initContainers/-"
  value:
    name: persist-init
    image: busybox:latest
    imagePullPolicy: IfNotPresent
    command: ["/bin/sh"]
    args:
      - -c
      - |
        /bin/chown 1000:1000 /home/app
        grep -q DOCKER_HOST /home/app/.bashrc || (echo DOCKER_HOST=tcp://127.0.0.1:2376 >> /home/app/.bashrc)
    volumeMounts:
      - name: persist
        mountPath: /home/app

###
# Add volumeMount to desktop container
###
- op: add
  path: "/spec/template/spec/containers/0/volumeMounts/-"
  value:
    name: persist
    mountPath: /home/app
{{- else}}
# Cannot have empty patch, so this is effectively a no-op.
- op: test
  path: /spec/template/spec/containers/0/name
  value: desktop
{{- end}}