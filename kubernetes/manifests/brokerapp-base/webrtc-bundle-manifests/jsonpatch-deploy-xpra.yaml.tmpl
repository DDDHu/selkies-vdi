{{- if .UserParams.enableXpra }}
{{- if eq .UserParams.enableXpra "true"}}
- op: remove
  # webrtc
  path: "/spec/template/spec/containers/3"
- op: remove
  # webrtc signaling
  path: "/spec/template/spec/containers/3"
- op: remove
  # webrtc web
  path: "/spec/template/spec/containers/3"

# Change entrypoint of desktop container.
- op: replace
  path: "/spec/template/spec/containers/1/command"
  value: ["/bin/bash", "-c"]

# Change args to desktop container.
- op: replace
  path: "/spec/template/spec/containers/1/args"
  value:
    - |
      echo "Waiting for X server"
      until [[ -e /var/run/appconfig/xpra_ready ]]; do sleep 1; done
      [[ -f /var/run/appconfig/.Xauthority ]] && cp /var/run/appconfig/.Xauthority ${HOME}/
      echo "X server is ready"

      [[ -c /dev/nvidiactl ]] && (cd /tmp && sudo LD_LIBRARY_PATH=${LD_LIBRARY_PATH} DISPLAY=${DISPLAY} vulkaninfo >/dev/null)

      # Create default desktop shortcuts.
      mkdir -p ${HOME}/Desktop
      find /etc/skel/Desktop -name "*.desktop" -exec ln -sf {} ${HOME}/Desktop/ \; || true

      # Copy autostart shortcuts
      mkdir -p ${HOME}/.config/autostart
      find /etc/skel/Autostart -name "*.desktop" -exec ln -sf {} ${HOME}/.config/autostart/ \; || true

      ${XPRA_ENTRYPOINT:-"terminator"}

# Add shared volume for xpra uploads
# Inserting as first element to deconflict other patches that append.
# See also: https://github.com/kubernetes-sigs/kustomize/issues/642
- op: add
  path: "/spec/template/spec/volumes/0"
  value:
    name: xpra-uploads
    emptyDir: {}

# Add shared volume for xpra uploads to desktop container
- op: add
  path: "/spec/template/spec/containers/0/volumeMounts/-"
  value:
    name: xpra-uploads
    mountPath: /mnt/uploads

# Add xpra container
# Inserting as first element to deconflict other patches that append.
# See also: https://github.com/kubernetes-sigs/kustomize/issues/642
- op: add
  path: "/spec/template/spec/containers/0"
  value:
    name: xpra
    image: gcr.io/cloud-solutions-images/webrtc-gpu-streaming-xpra:latest
    imagePullPolicy: IfNotPresent
    securityContext:
      privileged: false
      runAsUser: 1000
    # tty required to gather gpu stats using nvidia-smi and GPUtil python module.
    tty: true
    env:
      - name: LD_LIBRARY_PATH
        value: "/usr/local/nvidia/lib64:/usr/local/nvidia/cuda/lib64:/usr/local/nvidia/lib32"
      - name: DISPLAY
        value: ":0"
      - name: PULSE_SERVER
        value: "127.0.0.1:4713"
      - name: XPRA_PORT
        value: "8082"
      - name: XPRA
        value: "tcp://127.0.0.1:8082"
      # Add environment vars from brokerappconfig spec.
      {{- range $item := .AppSpec.AppEnv }}
      - name: {{$item.Name}}
        value: "{{$item.Value}}"
      {{- end}}
    volumeMounts:
      - name: x11
        mountPath: /tmp/.X11-unix
      - name: config
        mountPath: /var/run/appconfig
      - name: xpra-uploads
        mountPath: /home/app
    ports:
      - name: web
        containerPort: 8082
    resources:
      limits:
        nvidia.com/gpu: 1
{{- end}}
{{- end}}